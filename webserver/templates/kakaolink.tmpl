<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8"/>
<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width"/>
<title>FireFly KaKaoLink</title>
<script src="//developers.kakao.com/sdk/js/kakao.min.js"></script>
<script src="./js/jquery-3.3.1.min.js"></script>
<script type='text/javascript'>
  //<![CDATA[
    // // 사용할 앱의 JavaScript 키를 설정해 주세요.
    Kakao.init('f537cca02bdb2ce5a9e405e46c34d89a');
	// // 카카오링크 버튼을 생성합니다. 처음 한번만 호출하면 됩니다.
    function sendLink(imgurlval, linkval, btnurlval) {
      Kakao.Link.sendDefault({
        objectType: 'feed',
        content: {
          title: '{{.Title}}',
          description: '{{.Description}} {{.Msg4Shr}}',
          imageUrl: imgurlval,
          link: {
            mobileWebUrl:linkval,
            webUrl:linkval 
          }
        },
        social: {
          likeCount: {{.LikeCnt}},
          commentCount: {{.CmtCnt}},
          sharedCount: {{.ShrCnt}}
        },
        buttons: [
          {
            title: '{{.BtnTitle}}',
            link: {
              mobileWebUrl: btnurlval,
              webUrl: btnurlval
            }
          },
          {
            title: '반응하러가기',
            link: {
              mobileWebUrl: 'http://pf.kakao.com/_xiieJC/chat',
              webUrl: 'http://pf.kakao.com/_xiieJC/chat'
            }
          }
        ]
      });
    }
  //]]>
  window.onload = function() {
	var imgurlval = $('#imgurl').attr("src");
	var linkval = $('#link').attr("href");
	var btnurlval = $('#btnurl').attr("href");

	sendLink(imgurlval, linkval, btnurlval);
  }
</script>
<style type="text/css">
	a.content { color:black;text-decoration:none; }
	a.content:hover { color:black;text-decoration:none !important }
	a.link { color:#00DDDD;text-decoration:none; }
	a.link:hover { color:#00DDDD;text-decoration:none !important }
	table.kakaostyle { 
		width:400px;
		table-layout:fixed;
		word-break:break-all;
		background-color:#FFFFFF;
	}
	table.link { width:90%;border:1px solid #444444;margin-left:auto;margin-right:auto}
	td.link { text-align:center; }
	img {object-fit:cover; width:400px; height:400px;}
</style>
</head>
<body style="background-color:#9bbbd4;">
<!--a id="kakao-link-btn" href="javascript:sendLink()">
	<img src="//developers.kakao.com/assets/img/about/logos/kakaolink/kakaolink_btn_medium.png"/>
</a-->
<table width="400" class="kakaostyle">
	<tr>
		<td><img src="{{.ImgUrl|html}}" id="imgurl"/></td>
	</tr>
	<tr>
		<td><bold><h3><a href='{{.Link|html}}' id='link' class='content'>{{.Title}}</a></h3></bold></td>
	</tr>
	<tr>
		<td><h4 color="#696969">{{.Description}}</h4></td>
	</tr>
	<tr>
		<td><h4 color="#696969">{{.Msg4Vote}}</h4></td>
	</tr>
	<tr>
		<td><h4 color="#696969">{{.Msg4Shr}}</h4></td>
	</tr>
	<tr>
		<td>Share : {{.ShrCnt}}<br /></td>
	</tr>
	<tr>
		<td>
			<table class="link">
				<tr>
					<td class="link">
						<a href='{{.BtnUrl|html}}' id='btnurl' class='link'><h4 color="#00FFFF">{{.BtnTitle}}</h4></a>
					</td>
					<td class="link">
						<a href='http://49.236.137.51:5000/kakaolink' id='shrurl' class='link'><h4 color="#00FFFF">공유하기</h4></a>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
</body>
</html>
